{
    'platforms': [
        'Ubuntu 16.04'
    ],
    'repository': 'local',
    'packages': [
        {
            'name': 'Mongo DB',
            'platforms': {
                'Ubuntu 16.04': {
                    'commands': [
                        'apt-key adv --keyserver hkp://keyserver.ubuntu.com:80 --recv EA312927',
                        'echo "deb http://repo.mongodb.org/apt/ubuntu trusty/mongodb-org/3.2 multiverse" | tee /etc/apt/sources.list.d/mongodb-org-3.2.list',
                        'apt-get install -y --allow-unauthenticated mongodb',
                        'echo "[Unit]\nDescription=High-performance, schema-free document-oriented database\nAfter=network.target\n\n[Service]\nUser=mongodb\nExecStart=/usr/bin/mongod --quiet --config /etc/mongod.conf\n\n[Install]\nWantedBy=multi-user.target" | tee /etc/systemd/system/mongodb.service',
                        'systemctl start mongodb',
                        'systemctl enable mongodb'
                    ]
                }
            }
        }
    ],
    'files': [
        {
            'repopath': 'home/.bashrc',
            'platforms': {
                'Ubuntu 16.04': {
                    'path': '~/.bashrc'
                }
            }
        }
    ]
}
